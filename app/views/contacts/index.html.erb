<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Telephone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.telephone %></td>
        <td><%= link_to 'Show', client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Edit', edit_client_contact_path(@client, contact) %></td>
        <td><%= link_to 'Destroy', client_contact_path(@client, contact), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_client_contact_path %>
