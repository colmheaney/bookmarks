<h1>Listing bills</h1>

<td><%= @client.name %></td>
<table>
  <thead>
    <tr>
      <th>Bill date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.bill_date %></td>
        <td><%= link_to 'Show', client_bill_path(@client, bill) %></td>
        <td><%= link_to 'Edit', edit_client_bill_path(@client, bill) %></td>
        <td><%= link_to 'Destroy', client_bill_path(@client, bill), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bill', new_client_bill_path %>
