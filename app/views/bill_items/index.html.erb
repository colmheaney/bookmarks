<h1>Listing bill_items</h1>

<table>
  <thead>
    <tr>
      <th>Bill</th>
      <th>Amount</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_items.each do |bill_item| %>
      <tr>
        <td><%= bill_item.bill_id %></td>
        <td><%= bill_item.amount %></td>
        <td><%= bill_item.cost %></td>
        <td><%= link_to 'Show', bill_item %></td>
        <td><%= link_to 'Edit', edit_bill_item_path(bill_item) %></td>
        <td><%= link_to 'Destroy', bill_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

